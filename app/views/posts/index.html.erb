<div class="user_find_container">
    <div class="user_img_div">
      <img class="user_img" src="<%= @user.photo %>">
    </div>
    <div class="user_internal">
      <h1><%= @user.name %></h1>
      <p class="post_count">Number of Posts: <%= @user.posts_counter %></p>
    </div>
</div>

<% @posts = Post.where(author_id: @user.id) %>
<% if @posts.present? %>
  <% @posts.each do |post| %>
  <a class="each_post_detail" href="<%= user_post_path(@user, post) %>">
  <div class="post_each_post">
    <h3>Title: <%= post.title %></h3>
    <p>Text: <%= post.text %></p>
    <div class="post_like_comment_div">
      <p>Comments: <%= post.comments_counter %>,
      Likes: <%= post.likes_counter %></p>
    </div>
  </div>
  </a>
  <% @comments = post.five_most_recent_comments %>
  <div class="all_posts">
  <% @comments.each do |comment| %>
     <% author = User.find(comment.author_id) %>
    <p><b>Username: </b><%= author.name %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <b>Comment: </b><%= comment.text %></p>
  <% end%>
  </div>
  <% end %>
<% else %>
  <p>No posts found for this user.</p>
<% end %>
  <a class="pagination_button" href="<%= user_posts_path(@user) %>">Pagination</a>
