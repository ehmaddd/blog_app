<ul class="user_view">
<% @users.each do |user| %>
<li>
  <div class="user_container">
    <div class="user_img_div">
      <img class="user_img" src="<%= user.photo %>">
    </div>
      <div class="user_internal">
        <a class="show_user_posts" href="<%= user_path(user) %>">
          <h1><%= user.name %></h1>
        </a>
        <p class="post_count">Number of Posts: <%= user.posts_counter %></p>
      </div>
  </div>
</li>
<% end %>
</ul>
